[package]
name = "{{ project_name }}"
version = "0.1.1"
edition = "2024"
rust-version = "1.88"
readme = "./README.md"

[dependencies]
anyhow = "1"
figment = { version = "0.10", features = ["env", "toml"] }
jsonwebtoken = "9"
rust-embed = "8"
salvo = {version = "0.81", features = ["full"]}
serde = "1"
thiserror = "2"
time = "0.3"
tokio = {version = "1", features = ["full"]}
tracing = "0.1"
validator = {version = "0.20", features = ["derive"]}
{%- if db_lib != "mongodb" %}
ulid = "1"
{%- endif %}
argon2 = "0.5"
cookie = "0.18"
dotenvy = "0.15"
tracing-appender ="0.2"
tracing-subscriber = {version = "0.3", features = ["std", "fmt", "env-filter", "tracing-log", "time", "local-time", "json"]}
{%- if db_lib == "sqlx" and db_type == "postgres" %}
sqlx = { version = "0.8", features = ["runtime-tokio", "macros", "postgres"]}
{%- endif %}
{%- if db_lib == "sqlx" and db_type == "mysql" %}
sqlx = { version = "0.8", features = ["runtime-tokio", "macros", "mysql"]}
{%- endif %}
{%- if db_lib == "sqlx" and db_type == "sqlite" %}
sqlx = { version = "0.8", features = ["runtime-tokio", "macros", "sqlite"]}
{%- endif %}
{%- if db_lib == "seaorm" and db_type == "postgres" %}
sea-orm = { version = "1", features = ["runtime-tokio-native-tls", "sqlx-postgres"]}
{%- endif %}
{%- if db_lib == "seaorm" and db_type == "mysql" %}
sea-orm = { version = "1", features = ["runtime-tokio-native-tls", "sqlx-mysql"]}
{%- endif %}
{%- if db_lib == "seaorm" and db_type == "sqlite" %}
sea-orm = { version = "1", "features"  = ["runtime-tokio-native-tls", "sqlx-sqlite"]}
{%- endif %}
{%- if db_lib == "diesel" %}
diesel_migrations = "2"
scheduled-thread-pool = "0.2"
url = "2"
{%- if db_type == "postgres" %}
diesel = { version = "2", features = ["r2d2", "postgres", "serde_json"]}
{%- endif %}
{%- if db_type == "mysql" %}
diesel = { version = "2", features = ["r2d2", "mysql"]}
{%- endif %}
{%- if db_type == "sqlite" %}
diesel = { version = "2", features = ["r2d2", "sqlite", "returning_clauses_for_sqlite_3_35"]}
{%- endif %}
{%- endif %}
{%- if db_lib == "rbatis" %}
rbatis = { version = "4"}
rbs = { version = "4"}
{%- if db_type == "postgres" %}
rbdc-pg = { version = "4"}
{%- endif %}
{%- if db_type == "mysql" %}
rbdc-mysql = { version = "4"}
{%- endif %}
{%- if db_type == "sqlite" %}
rbdc-sqlite = { version = "4"}
{%- endif %}
{%- endif %}
{%- if db_type == "mongodb" %}
mongodb = { version = "3"}
futures-util = { version = "0.3"}
{%- endif %}
rinja = "0.3"
rand = "0.9"