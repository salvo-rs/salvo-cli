server:
  name: "{{project_name}}"
  address: "0.0.0.0:5800"
  ssl: false
  cors_allow_origin:
    - "https://salvo.rs"

{{#if need_db_conn}}
database:
  {{#if is_seaorm_or_sqlx}}
  {{#if is_postgres}}
  database_url: "postgresql://liufankai:1@localhost/salvo_demo"
  {% endif %}
  {{#if is_sqlite}}
  database_url: "sqlite:data/demo.db"
  {% endif %}
  {{#if is_mysql}}
  database_url: "mysql://root:981109@localhost/salvo_demo"
  {% endif %}
  {% endif %}
  {{#if is_diesel}}
  {{#if is_postgres}}
  database_url: "postgres://liufankai:1@localhost/diesel_example"
  {% endif %}
  {{#if is_sqlite}}
  database_url: "file:data/test.db"
  {% endif %}
  {{#if is_mysql}}
  database_url: "mysql://root:123@127.0.0.1:3306/diesel_example"
  {% endif %}
  {% endif %}
  {{#if is_rbatis}}
  {{#if is_postgres}}
  database_url: "postgres://liufankai:1@localhost/rbatis_example"
  {% endif %}
  {{#if is_sqlite}}
  database_url: "data/rbatis_sqlite.db"
  {% endif %}
  {{#if is_mysql}}
  database_url: "mysql://root:123@127.0.0.1:3306/rbatis_example"
